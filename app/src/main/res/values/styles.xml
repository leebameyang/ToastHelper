<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnimationFlyFromLeft">
        <item name="android:windowEnterAnimation">@anim/fly_in_left</item>
        <item name="android:windowExitAnimation">@anim/fly_out_right</item>
    </style>

    <style name="AnimationFlyFromRight">
        <item name="android:windowEnterAnimation">@anim/fly_in_right</item>
        <item name="android:windowExitAnimation">@anim/fly_out_left</item>
    </style>
</resources>
